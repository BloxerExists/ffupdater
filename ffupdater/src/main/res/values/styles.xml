<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_activity__theme" parent="@style/Theme.Material3.DayNight.NoActionBar">
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="crash_report__theme" parent="@style/Theme.Material3.DayNight">
        <item name="colorPrimary">@color/crash_report__error_red</item>
        <item name="colorPrimaryDark">@color/crash_report__error_red</item>
        <item name="colorAccent">@color/crash_report__color_accent</item>
    </style>

    <style name="add_app__theme" parent="Theme.Material3.DayNight">
    </style>

    <style name="main_activity__main_title">
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="install_activity__default_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="install_activity__button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="install_activity__bold_text" parent="install_activity__default_text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="install_activity__monospace_text" parent="install_activity__default_text">
        <item name="android:textIsSelectable">true</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="install_activity__segment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>