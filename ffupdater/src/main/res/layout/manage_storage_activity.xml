<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarFadeDuration="0"
    android:scrollbars="vertical"
    tools:context=".ManageStorageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <TextView
            style="@style/manage_storage_activity__bold_text"
            android:layout_marginBottom="8dp"
            android:text="@string/manage_storage_activity__explanation" />

        <Button
            android:id="@+id/manage_storage_activity__delete_cached_apk_files"
            style="@style/install_activity__button"
            android:text="@string/manage_storage_activity__delete_button" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>