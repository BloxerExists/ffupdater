<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardBackgroundColor="@color/red_background_for_text"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/app_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/eol_app_card__app_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/app_icon"
            android:tag="app_icon"
            app:layout_constraintStart_toStartOf="@id/app_card"
            app:layout_constraintTop_toTopOf="@id/app_card" />

        <TextView
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-light"
            android:singleLine="true"
            android:tag="app_title"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/eol_app_card__app_icon"
            app:layout_constraintTop_toTopOf="@id/app_card" />

        <ImageView
            android:id="@+id/eol_app_card__error_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:tag="errorIcon"
            app:layout_constraintStart_toStartOf="@id/app_card"
            app:layout_constraintTop_toBottomOf="@id/eol_app_card__app_icon"
            app:srcCompat="@drawable/ic_baseline_error_36dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:tag="eol_reason"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/app_card"
            app:layout_constraintStart_toEndOf="@id/eol_app_card__error_icon"
            app:layout_constraintTop_toBottomOf="@id/eol_app_card__app_icon" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>